<!DOCTYPE tml>
<html>
<head>
  <title>Serler</title>

  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= stylesheet_link_tag "https://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800" %>
  <%= stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" %>
  <%= stylesheet_link_tag params[:controller], :media => "all" %>

  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag params[:controller] %>

  <%= csrf_meta_tags %>
  <%= yield :head %>
</head>
<body>

<nav class="navbar navbar-default">
  <div class="container-fluid">

    <div class="navbar-header">
      <a class="navbar-brand"
          href="<%= url_for :controller => :pages, :action => :index %>">
          Serler
          <%= image_tag("/logo_image.png") %>
      </a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

      <ul class="nav navbar-nav">

<%#   example active item:
        <li class="active">
          <a href="#">Link <span class="sr-only">(current)</span></a>
        </li>
%>
        <li>
          <a
            href="<%= url_for(:controller => :search, :action => :index) %>">
            Search
          </a>
        </li>

        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"
            role="button" aria-haspopup="true" aria-expanded="false">
              Browse<span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <li><a href="#">Evidence Items (dummy)</a></li>
            <li><a href="#">Evidence Sources (dummy)</a></li>
            <li role="separator" class="divider"></li>
            <li>
              <%= link_to 'Saved search results', url_for(:controller => 'saved_search_results', :action => 'index') %>
            </li>
            <li>
              <%= link_to 'Saved search queries', url_for(:controller => 'saved_search_queries', :action => 'index') %>
            </li>
          </ul>
        </li>

        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"
            role="button" aria-haspopup="true" aria-expanded="false">
              Add (dummy)<span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <li><a href="#">Evidence Item</a></li>
            <li><a href="#">Evidence Source</a></li>
            <li><a href="#">â€¦</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="#">Separated link</a></li>
          </ul>
        </li>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"
          role="button" aria-haspopup="true" aria-expanded="false">
            <i class="fa fa-user fa-lg"></i><span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <li><a href="#">Settings</a></li>
            <li><a href="#">Something else here</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="#">Logout</a></li>
          </ul>
        </li>
      </ul>

    </div>
  </div>
</nav>

<div class="container" role="main">
  <% flash.each do |key, value| %>
    <div class="<%= bootstrap_flash_class(key) %>"><%= value %></div>
  <% end %>
  <%= yield %>
</div>
</body>
</html>
